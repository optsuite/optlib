    constructor
    ¬∑ rw [hdomain]; simp
    ¬∑ intro j hj
      have notin : j ‚àâ œÑ := by
        by_contra hh;
        have : j ‚àà œÑ ‚à© œÉ := by simp [hj, hh]
        rw [p.eq_ine_not_intersect] at this; tauto
      by_cases hj1 : j ‚àà p.active_set x
      ¬∑ have jin : j ‚àà œÉ ‚à© (p.active_set x) := by simp [hj1, hj]
        obtain h := hvh2 j jin
