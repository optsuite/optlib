def IsLinear (f : E ‚Üí ‚Ñù) : Prop := ‚àÉ a, ‚àÉ b, f = fun x ‚Ü¶ ‚ü™x, a‚ü´_‚Ñù + b

lemma IsLinear_iff (f : E ‚Üí ‚Ñù) : IsLinear f ‚Üî ‚àÉ a b, f = fun x ‚Ü¶ ‚ü™x, a‚ü´_‚Ñù + b := by rfl

lemma IsLinear_iff' (f : E ‚Üí ‚Ñù) :
    IsLinear f ‚Üî ‚àÉ a b, f = fun x ‚Ü¶ ‚ü™a, x‚ü´_‚Ñù + b := by
  constructor
  ¬∑ rintro ‚ü®a, b, rfl‚ü©
    exact ‚ü®a, b, by
      funext x; simp [real_inner_comm]‚ü©
  ¬∑ rintro ‚ü®a, b, rfl‚ü©
    exact ‚ü®a, b, by
      funext x; simp [real_inner_comm]‚ü©

end linear

/-
  Linear Constraint Qualification
-/
def LinearCQ (point : E) : Prop :=
  (‚àÄ i ‚àà (p.active_set point ‚à© œÑ), IsLinear (p.equality_constraints i)) ‚àß
  ‚àÄ i ‚àà (p.active_set point ‚à© œÉ), IsLinear (p.inequality_constraints i)

end Constrained_OptimizationProblem

